<h1 class="display-1">Add Car</h1>
{{#if newId}}
    <div class="alert alert-success" role="alert">New car with id = {{newId}} has been added to database</div>
{{/if}}
<form method="POST" action="/add">
    <div class="form-group">
        <div class="form-check my-2">
            <input class="form-check-input" type="checkbox" name="insurance" id="insurance" value="true">
            <label class="form-check-label" for="insurance">Insurance</label>
        </div>
        <div class="form-check my-2">
            <input class="form-check-input" type="checkbox" name="gasoline" id="gasoline" value="true">
            <label class="form-check-label" for="gasoline">Gasoline</label>
        </div>
        <div class="form-check my-2">
            <input class="form-check-input" type="checkbox" name="damaged" id="damaged" value="true">
            <label class="form-check-label" for="damaged">Damaged</label>
        </div>
        <div class="form-check my-2">
            <input class="form-check-input" type="checkbox" name="drive" id="drive" value="true">
            <label class="form-check-label" for="drive">Drive 4x4</label>
        </div>
    </div>
    <button type="submit" class="btn btn-success my-2">Add car</button>
</form>